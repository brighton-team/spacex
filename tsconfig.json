{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "actions": ["./actions"],
      "components": ["./components"],
      "consts": ["./consts"],
      "decorators": ["./decorators"],
      "reducers": ["./reducers"],
      "store": ["./store"],
      "styles": ["./styles"],
      "pages": ["./pages"],
      "types": ["./types"],
      "utils": ["./utils"],
      "assets": ["./assets"]
    }
  }
}
